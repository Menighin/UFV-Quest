<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >

    <TextView
          android:id="@+id/ranking_position"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_marginTop="18dp"
          android:layout_marginLeft="10dp"
          android:text="1º"
          android:textSize="20sp"
          android:textStyle="bold" />
    
    <ImageView
        android:id="@+id/ranking_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ranking_position"
        android:src="@drawable/avatar" />

    <TextView
          android:id="@+id/ranking_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/ranking_avatar"
          android:text="Isabella Alves Peçanha"
          android:textColor="#FF555555"
          android:textSize="14sp"
          android:textStyle="bold"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp" />
    
      <TextView
          android:id="@+id/ranking_points"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/ranking_avatar"
          android:text="10000pts"
          android:textSize="16sp"
          android:textStyle="bold"
          android:textColor="#FFAAAAAA"
          android:layout_marginTop="30dp"
          android:layout_marginLeft="10dp" />
		
     
    
</RelativeLayout>
