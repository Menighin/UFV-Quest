<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:paddingTop="12dp"
   	android:paddingBottom="12dp"
   	android:paddingLeft="10dp"
   	android:paddingRight="10dp" >
    
    <TextView 
        android:id="@+id/navigation_header_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100pts"
        android:textSize="14sp"
        android:textColor="#ffffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textStyle="bold"/>
    
    <ImageView 
        android:id="@+id/navigation_header_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/avatar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/navigation_header_points"/>

    <TextView
        android:id="@+id/navigation_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navigation_header_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="JoÃ£o Rodrigo"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:textStyle="bold" />
    
    <LinearLayout 
        android:id="@+id/navigation_header_energy"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/navigation_header_name"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        
    </LinearLayout>

</RelativeLayout>
